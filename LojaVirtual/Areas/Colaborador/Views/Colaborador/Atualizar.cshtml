@model LojaVirtual.Models.Colaborador
@{
    ViewData["Title"] = "Atualizar";
}

<h2>Atualizar</h2>

<form method="post">
    <input type="hidden" asp-for="Id"/>
    <input type="hidden" asp-for="Tipo"/>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do colaborador" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Digite o e-mail do colaborador" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Senha"></label>
        <input asp-for="Senha" class="form-control" placeholder="Digite a senha do colaborador" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmaSenha"></label>
        <input asp-for="ConfirmaSenha" class="form-control" placeholder="Digite a senha novamente" />
        <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Atualizar</button>
    <a asp-action="Index" class="btn btn-info">Voltar</a>
</form>